      <h2><%= pluralize(@hwm_user_account.errors.count, "error") %> prohibited this hwm_user_account from being saved:</h2>

      <ul>
      <% @hwm_user_account.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :昵称 %><br />
    <%= f.text_field :nickname %>
  </div>
  <div class="field">
    <%= f.label :手机 %><br />
    <%= f.text_field :mobile %>
  </div>
  <div class="field">
    <%= f.label :密码 %><br />
    <%= f.password_field :password %>
  </div>

  <div class="varifycode">
    <label for="hwm_user_account_verifycode">填写验证码</label><br />
    <input id="hwm_user_account_verifycode" name="vericode" size="30" type="text" />
  </div>  
  <input type="button" onclick="varicode_sender()" NAME="Button1" value="获取验证码"></input>

  <div id="vericode_sender"></div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

